<mvc:View
    controllerName="base.controller.ViDu03"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    displayBlock="true">
    <!-- Breadcrumbs sample -->
    <l:VerticalLayout class="sapUiContentPadding" width="100%">
        <l:content>
            <Breadcrumbs currentLocationText="Laptop" separatorStyle="{/selected}">
                <Link press="onPress" text="Products"/>
                <Link press="onPress" text="Suppliers"/>
                <Link press="onPress" text="Titanium"/>
                <Link press="onPress" text="Ultra portable"/>
                <Link press="onPress" text="12 inch"/>
                <Link press="onPress" text="Super portable deluxe"/>
            </Breadcrumbs>
            <HBox alignItems="Center">
                <items>
                    <Label
							labelFor="separatorSelect"
							text="Change separator style"
					/>
                    <Select
							class="sapUiSmallMarginBegin"
							id="separatorSelect"
							selectedKey="{/selected}"
							change="onChange"
							items="{
								path: '/items'
							}">
                        <core:Item key="{text}" text="{key}" />
                    </Select>
                </items>
            </HBox>
        </l:content>
    </l:VerticalLayout>
    <!-- Breadcrumbs sample without current page -->
    <l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
        <Breadcrumbs separatorStyle="{/separatorStyle}">
            <Link text="Home" press="onPressPage"/>
            <Link text="Page 1" press="onPressPage" />
            <Link text="Page 2" press="onPressPage" />
            <Link text="Page 3" press="onPressPage" />
            <Link text="Page 4" press="onPressPage" />
            <Link text="Page 5" press="onPressPage" />
        </Breadcrumbs>
        <HBox alignItems="Center">
            <Label labelFor="separatorSelectPage" text="Change separator style" />
            <Select class="sapUiSmallMarginBegin"
					id="separatorSelectPage"
					selectedKey="{/separatorStyle}"
					change="onChangePage"
					items="{ path: '/items' }">
                <core:Item key="{text}" text="{key}" />
            </Select>
        </HBox>
    </l:VerticalLayout>
    <!-- Breadcrumbs sample with current page link -->
    <l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
        <Title text="Breadcrumbs with current page aggregation set" />
        <Breadcrumbs>
            <Link text="Home" press=".onPressPage01"/>
            <Link text="Page 1" press=".onPressPage01" />
            <Link text="Page 2" press=".onPressPage01" />
            <Link text="Page 3" press=".onPressPage01" />
            <Link text="Page 4" press=".onPressPage01" />
            <Link text="Page 5" press=".onPressPage01" />
            <Link text="Page 6 (current)" enabled="false" class="currentPage"/>
        </Breadcrumbs>
    </l:VerticalLayout>
    <!-- Dynamic Page Freestyle Example -->
    <f:DynamicPage id="dynamicPageId"  headerExpanded="{example>/headerExpanded}" toggleHeaderOnTitleClick="{example>/titleClickable}" fitContent="false" showFooter="false">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Header Title"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs>
                        <Link text="Home" />
                        <Link text="Page 1" />
                        <Link text="Page 2" />
                        <Link text="Page 3" />
                        <Link text="Page 4" />
                        <Link text="Page 5" />
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:expandedContent>
                    <Label text="This is a subheading"/>
                </f:expandedContent>
                <f:snappedContent>
                    <Label text="This is a subheading"/>
                </f:snappedContent>
                <f:snappedTitleOnMobile>
                    <Title text="This is a subheading"/>
                </f:snappedTitleOnMobile>
                <f:content>
                    <OverflowToolbar>
                        <GenericTag text="SR"
								status="Error"
								press="onPressOpenPopover"
								design="StatusIconHidden">
                            <ObjectNumber number="2"
									unit="M"
									emphasized="false"
									state="Error"/>
                        </GenericTag>
                    </OverflowToolbar>
                </f:content>
                <f:actions>
                    <Button
								text="Edit"
								type="Emphasized"
								press="toggleAreaPriority"/>
                    <Button
								text="Delete"
								type="Transparent"/>
                    <Button
								text="Copy"
								type="Transparent"/>
                    <Button
								text="Toggle Footer"
								type="Transparent"
								press="onToggleFooter"/>
                    <Button
								icon="sap-icon://action"
								type="Transparent"/>
                    <Button
								text="Button with layoutData"
								type="Transparent"
								press="onPressOpenPopover">
                        <layoutData>
                            <OverflowToolbarLayoutData priority="AlwaysOverflow" closeOverflowOnInteraction="false" />
                        </layoutData>
                    </Button>
                </f:actions>
                <f:navigationActions>
                    <Button
								icon="sap-icon://full-screen"
								type="Transparent" />
                    <Button
								icon="sap-icon://decline"
								type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <l:HorizontalLayout allowWrapping="true">
                    <l:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute title="Location" text="Warehouse A"/>
                        <ObjectAttribute title="Halway" text="23L"/>
                        <ObjectAttribute title="Rack" text="34"/>
                    </l:VerticalLayout>
                    <l:VerticalLayout>
                        <ObjectAttribute title="Availability"/>
                        <ObjectStatus text="In Stock" state="Success" />
                    </l:VerticalLayout>
                </l:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table  id="idProductsTable"
				    sticky="HeaderToolbar,ColumnHeaders"
					inset="false"
					items="{
						path: 'example>/Products',
						sorter: {
							path: 'Name'
						}
					}"
					class="sapFDynamicPageAlignContent"
					width="auto">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Products" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="Product" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Supplier" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                        <Text text="Dimensions" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Price" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier
										title="{example>Name}"
										text="{example>ProductId}"/>
                            <Text
										text="{example>SupplierName}" />
                            <Text text="{example>Width} x {example>Depth} x {example>Height} {example>DimUnit}" />
                            <ObjectNumber
								number="{
											parts:[{path:'example>Price'},{path:'example>CurrencyCode'}],
											type: 'sap.ui.model.type.Currency',
											formatOptions: {showMeasure: false}
										}"
								unit="{example>CurrencyCode}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Accept" text="Accept"/>
                <Button type="Reject" text="Reject"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>